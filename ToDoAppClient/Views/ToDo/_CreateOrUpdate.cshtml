@model ToDoApp_Client.Models.ItemViewModel



<div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
        <div class="fg-line">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">Details</label>
    <div class="col-sm-10">
        <div class="fg-line">
            @Html.TextBoxFor(m => m.Details, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Details)
        </div>
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">Status</label>
    <div class="col-sm-10">
        <div class="fg-line">
            @Html.TextBoxFor(m => m.Status, new { @readonly = true })
            @Html.ValidationMessageFor(m => m.Status)
        </div>
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">DueDate</label>
    <div class="col-sm-10">
        <div class="fg-line">
            @Html.TextBoxFor(m => m.DueDate, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DueDate, "", new { @class = "form -control date-picker", @data_val = "true" })
        </div>
    </div>
</div>



